<script type ="text/javascript">

    function SendMail() { 
        debugger;
 
        $.ajax({
            type: "POST",
            url: "@Url.Action("SendMail", "Home")",  
            data: { EmailFrom: $("#EmailFrom").val(), EmailTo: $("#EmailTo").val(), Pass: $("#txtPass").val(), User: $("#txtUser").val(), Msg: $("#txtMSG").val(), Port: $("#txtPort").val(), Srv: $("#txtServer").val() },
            success: function (data) {
                if (data.Success == true) {
                    alert(data.Message); 
                }
                else {
                    alert(data.Message);
                    $("#divErrorMessages").html(data.Message);
                    ShowHideLoader('hide');
                }
            },
            error: function () {
                ShowHideLoader('hide');
            }
        });
    }

</script>