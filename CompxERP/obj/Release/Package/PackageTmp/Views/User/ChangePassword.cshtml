<script type ="text/javascript">
    $('#UpdPass').click(function () {
        debugger;
        if ($('#compitno').val() != '') {
            $.get("/Home/ChangPass", { CurrPass: $('#Currentpass').val(), NewPass: $('#newpass').val() }, function (data) {
                if (data != null) {
                    if (data == "1")
                        alert('Change Password Successfully ...');
                    else if (data == "2")
                        alert('Incorrect Current Password ...');
                    else
                        alert('Password Not Update...');

                    $('#Currentpass').val('');
                    $('#newpass').val('');
                    $('#cnewpass').val('');
                }
            });
        }
    });
</script>