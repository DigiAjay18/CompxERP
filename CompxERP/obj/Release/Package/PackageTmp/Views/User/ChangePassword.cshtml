                    <div class="form-group">
                        <div class="col-sm-12">Current Password</div>
                        <div class="col-sm-12">
                            <input class="form-control" id="Currentpass" autocomplete="off" name="Currentpass" value="" type="text"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">New Password</div>
                        <div class="col-sm-12">
                            <input class="form-control" id="newpass" maxlength="8" autocomplete="off" type="password"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">Confirm New Password</div>
                        <div class="col-sm-12">
                            <input class="form-control" id="cnewpass" onblur="ChkPasswordOwn();" name="cnewpass" maxlength="8" autocomplete="off" type="password"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="UpdPass" value="Save" class="btn btn-default" type="button">
                      <button type="button" class="btn btn-default" onclick="ClearDvData();">Close</button> 
                </div>
            </div>

