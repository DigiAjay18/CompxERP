           <table id="example1" class="table table-bordered table-striped" >
    <thead>    
      <tr>  
            <th style="width:5%;">S No</th>
            <th style="width:25%;">User Name</th>
            <th style="width:15%;">Type</th>
            <th style="width:15%;">Password</th>    
            <th style="width:15%;">CreatedDate</th>    
            <th style="width:15%;">Name</th>    
            <th style="width:10%;text-align:center;">Update</th>    
        </tr>
    </thead>
    <tbody style="height:430px;"> 
        @{
            var iIndex =0;
        if (Model != null && Model.Count > 0)
        {   
            foreach (var item in Model)  
            {
                iIndex = iIndex + 1;
             <tr>  
                 <td  style="width:5%;">@iIndex</td>
                 <td  style="width:25%;">  <input type="text" id="txtUsename_@item.usecode"  value ="@item.usename" maxlength="40" class="form-control unset_text" /></td>
                 <td  style="width:15%;">@item.UserType</td>   
                 <td  style="width:15%;"> <input type="password" id="txtPassWord_@item.usecode" value ="@item.PassWord" maxlength="8" class="form-control" /> </td>   
                 <td  style="width:15%;">@item.usecrdt.ToString("dd/MM/yyyy hh:mm tt")</td>   
                 <td  style="width:15%;">@item.UserNM</td>   
                   
                 <td  style="width:10%;text-align:center;" ><a class="fa fa-fw" id="btnUpdUserDet_@item.usecode" onclick="UpdUserDet('@item.usecode' ,'@item.PassWord' ,'@item.usename');" style="cursor: pointer;"><img src="~/img/Update.png" /></a></td> 
             </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No Records Found</td>
            </tr>            
        }}
    </tbody>
</table>
  
        </div>
      
  

   
    <script type="text/javascript">

        GetUserCount();

        function UpdUserDet(usecode)
        {
            debugger;
           
            Chk_User($('#txtUsename_' + usecode).val());

            if ($('#txtUsename_' + usecode).val() != '') {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("UpdUserDet", "Home")",
                    data: { usecode: usecode, PassWord: $('#txtPassWord_' + usecode).val(), Usename: $('#txtUsename_' + usecode).val() },
                    success: function (data) {
                        if (data == "1")
                            alert('Update Successfully ...');
                    },
                    error: function () {
                        alert('Error');
                    }
                });
            }
        }
           
        function Chk_User(usecode) {
            debugger;
            if ($('#txtUsename_' + usecode).val() != '') {
                $.get("/Home/Chk_User", { sUser: $('#txtUsename_' + usecode).val() }, function (data) {
                    if (data != null && data != 0) {
                        alert('User (' + $('#txtUsename_' + usecode).val() + ') Already Exists ...');
                        $('#txtUsename_' + usecode).val(''); 
                    }
                });
            }
        }

        function GetUserCount() {
            debugger; 
            $.get("/Home/GetUserCount", {}, function (data) {
                    if (data != null && data != 0) { 
                        $('#Tot_Dist').val(data.Tot_Dist); 
                        $('#Tot_Deal').val(data.Tot_Deal); 
                        $('#Tot_Emp').val(data.Tot_Emp);
                    }
                });
            
        }
    </script>  


